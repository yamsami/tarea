	Escribir 'Ingrese un número entero positivo:'
	Leer numerp
	
	nuo <- numerp
	inverso <- 0 // guardar el valor original del número
	Mientras numerp>0 Hacer // inicializar el número inverso
		//digito <- numerp mod 10
	//	inverso <- inverso*10+digito // obtener el último dígito del número
//		numerp <- numerp/10 // agregar el dígito al número inverso
	FinMientras // quitar el último dígito del número
	Si nuo=inverso Entonces
		Escribir 'El número', aux, 'es capicúa.'
	SiNo
		Escribir 'El número', aux, 'no es capicúa.'
	FinSi
FinFunción
funcion ejercicio15<-lol(0)
	
	definir ji,i  Como Entero
	// Leer un número
	Leer ji
	
	Escribir "Los divisores de ", ji, " son:"
	
	// Calcular y mostrar los divisores
	Para i <- 1 Hasta ji Hacer
		Si ji MOD i = 0 Entonces
			Escribir i
		Fin Si
	Fin Para
	
	// Esperar a que el usuario presione una tecla para salir
	Esperar Tecla
	FinFuncion
	funcion ejercicio16<-jh(0)
		// Leer un número
		definir numeroi,i Como Entero
		Leer numeroi
		
		// Calcular la suma de los divisores
		Definir sumaDivisores Como Entero
		sumaDivisores <- 0
		
		Para i <- 1 Hasta numeroi Hacer
			Si numeroi MOD i = 0 Entonces
				sumaDivisores <- sumaDivisores + i
			Fin Si
		Fin Para
		
		Escribir "La suma de los divisores de ", numeroi, " es ", sumaDivisores
		
		// Esperar a que el usuario presione una tecla para salir
		Esperar Tecla
FinFuncion
funcion ejercici17<-gdf(0)
	// Leer un número
	definir numer,i Como entero
	Leer numer
	
	// Contar la cantidad de divisores
	Definir cantidadDivisores Como Entero
	cantidadDivisores <- 0
	
	Para i <- 1 Hasta numer Hacer
		Si numer MOD i = 0 Entonces
			cantidadDivisores <- cantidadDivisores + 1
		Fin Si
	Fin Para
	
	Escribir "El número ", numer, " tiene ", cantidadDivisores, " divisores."
	
	
FinFuncion
funcion ejercicio18<-fv(0)
	definir num, i Como Entero
	Leer num
	
	// Calcular la suma de los divisores
	Definir sumaDivisores Como Entero
